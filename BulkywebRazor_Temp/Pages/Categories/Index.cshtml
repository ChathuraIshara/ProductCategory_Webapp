@page
@model BulkywebRazor_Temp.Pages.Categories.IndexModel
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>

        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="/Categories/Create" >
                <i class="bi bi-plus-circle"></i>Create new Category
            </a>

        </div>
    </div>
    <table class="table table-bordered table-stripped m-5">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display-Order</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>



    </table>


</div>
