@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 p-1 row">
            <label class="p-0" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <Span asp-validation-for="DisplayOrder" class="text-danger"></Span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-primary form-control" type="submit" >Create</button>

            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="index">Back To List</a>

            </div>
        </div>
      
      
    </div>
</form>